
<% provide(:title, "Character Index") %>
<p id="notice"><%= notice %></p>

<h1>List of Characters</h1>

<table width=100%>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Description</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <tr class="<%= cycle('oddrow', 'evenrow') -%>">
        <td><%= character.name %></td>
        <td><%= character.age %></td>
        <td><%= character.description %></td>
        <td><%= link_to 'Show', character %></td>
        <td><%= link_to 'Edit', edit_character_path(character) %></td>
        <td><%= link_to 'Delete', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Character', new_character_path %>
